@page "/ventas"

<h3>Ventas</h3>
<br />
<a href="/ventaDetails"><i>Nueva venta</i></a>
<br />

@if (result != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Inmueble</th>
                <th>Cliente</th>
                <th>Condicion</th>
                <th>Forma de Pago</th>
                <th>Descripcion</th>
                <th>Total Venta</th>
                <th>Total Iva</th>
                <th>Total General</th>
                <th>Fecha de venta</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ClienteSwagger.Venta venta in result)
            {
                <tr>
                    <th>@venta.VentaId</th>
                    <th>@venta.Inmueble.InmuebleDesc</th>
                    <th>@venta.Cliente.ClienteNombre</th>
                    <th>@venta.Condicion.CondicionDesc</th>
                    <th>@venta.FormaPago.FormaPagoDesc</th>
                    <th>@venta.VentaDesc</th>
                    <th>@venta.VentaTotal</th>
                    <th>@venta.VentaTotalIva</th>
                    <th>@venta.VentaTotalGeneral</th>
                    <th>@venta.VentaFecha</th>
                    <th><a href="ventaDetails/@venta.VentaId"><i>Editar</i></a></th>
                    <th><a href="ventaDelete/@venta.VentaId"><i>Eliminar</i></a></th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No se encontraron resultados</h3>
}


@code {

    private ICollection<ClienteSwagger.Venta> result;

    private ClienteSwagger.ClienteSwagger client = new ClienteSwagger.ClienteSwagger("https://localhost:7179/", new HttpClient());

    private async Task Refresh()
    {
        result = await client.VentaAllAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }
}
